[alias]
  alias = !git config -l | grep ^alias | cut -c 7- | sort
  s = status -s
  d = diff
  ds = diff --staged

[apply]
  whitespace = warn

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold # line info
	old = red # deletions
	new = green # additions

[color "status"]
	added = yellow
	changed = green
  untracked = cyan

[commit]
  template = ~/.gitmessage

[core]
  autocrlf = false
  editor = vim
  excludesfile = ~/.gitignore

[diff]
  renames = copies

